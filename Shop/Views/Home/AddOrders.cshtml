@model List<Order>
@{
    ViewData["Title"] = "Add Orders";
}

<h1>@ViewData["Title"]</h1>

@foreach (var order in Model)
{
    <div class="row">
        <div class="col-md-4"><span>Name: </span>@order.Item</div>

        <div class="col-md-4"><span>Brand: </span>@order.Brand</div>
    </div>

    <hr />
}

<div class="add-button-wrapper">
    <button onclick="addEvent()" class="btn btn-success">Add order</button>
</div>

<div class="add-form-wrapper invisible">
    <form asp-controller="Home" asp-action="Add" method="post">
        <input type="text" name="orderName" placeholder="Item..." />
        <input type="text" name="brand" placeholder="Brand..." />

        <button type="submit" class="btn btn-success">Add</button>
        <button type="button" onclick="cancelAdd()" class="btn btn-outline-success">Cancel</button>
    </form>
</div>