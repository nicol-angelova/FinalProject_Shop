@model List<Order>
@{
    ViewData["Title"] = "Delete Items";
}

<h1>@ViewData["Title"]</h1>

@foreach (var order in Model)
{
    <div class="row">
        <div class="col-md-4"><span>Name: </span>@order.Item</div>

        <div class="col-md-4"><span>Brand: </span>@order.Brand</div>

        <button onclick="getItemToDelete('@order.Id', '@order.Item')" class="btn btn-dark" data-toggle="modal" data-target="#exampleModal">Delete</button>
    </div>

    <hr />
}

<!-- Delete modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete item</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete <strong id="orderToDeleteName"></strong>?
                <span hidden id="orderToDeleteId"></span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button onclick="deleteItem()" type="button" class="btn btn-primary">Delete</button>
            </div>
        </div>
    </div>
</div>